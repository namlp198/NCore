<UserControl x:Class="NCore.Wpf.UcZoomBoxViewer.UcZoomBoxViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Ctrls="clr-namespace:NpcCore.Wpf.Controls;assembly=NpcCore.Wpf"
             xmlns:local="clr-namespace:NCore.Wpf.UcZoomBoxViewer"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/NpcCore.Wpf;component/Themes/DefaultTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="8*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid>
            <Border Background="#232939"
                    Margin="1"
                    CornerRadius="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.8*" />
                        <ColumnDefinition Width="1.4*" />
                        <ColumnDefinition Width="1.2*" />
                    </Grid.ColumnDefinitions>
                    <DockPanel>
                        <TextBlock Text="Brand"
                                   VerticalAlignment="Center"
                                   Foreground="White"
                                   Margin="5 0 3 0"
                                   FontSize="14" />
                        <ComboBox  Margin="5" />
                    </DockPanel>
                    <DockPanel Grid.Column="1">
                        <TextBlock Text="Camera"
                                   VerticalAlignment="Center"
                                   Foreground="White"
                                   Margin="5 0 3 0"
                                   FontSize="14" />
                        <ComboBox  Margin="5" />
                    </DockPanel>
                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Button Background="WhiteSmoke"
                                BorderThickness="1">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{DynamicResource IMG_FiducialArrow}"
                                           Margin="5 5 0 5" />
                                    <TextBlock Text="Live"
                                               VerticalAlignment="Center"
                                               FontSize="16"
                                               FontWeight="SemiBold" />
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button Background="WhiteSmoke"
                                BorderThickness="1"
                                Grid.Column="1">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{DynamicResource IMG_ZPositionClose}"
                                           Margin="2 5 0 5" />
                                    <TextBlock Text="Grab"
                                               VerticalAlignment="Center"
                                               FontSize="16"
                                               FontWeight="SemiBold" />
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button Background="WhiteSmoke"
                                BorderThickness="1"
                                Grid.Column="2">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{DynamicResource IMG_SideBarStopIcon}"
                                           Margin="2 5 0 5" />
                                    <TextBlock Text="Stop"
                                               VerticalAlignment="Center"
                                               FontSize="16"
                                               FontWeight="SemiBold" />
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Ctrls:ZoomBorder ClipToBounds="True"
                                  CornerRadius="3"
                                  BorderThickness="1"
                                  x:Name="zoomBoder">
                    <Image x:Name="imageViewer"
                           Source="{DynamicResource IMG_NODATA}"/>
                </Ctrls:ZoomBorder>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Border BorderThickness="1"
                            CornerRadius="3"
                            Background="LightGray">
                        <TextBlock VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   FontSize="50"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center"
                                   Text="NONE"
                                   Foreground="White"/>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Border Background="#232939"
                    BorderThickness="1"
                    CornerRadius="3">
                <StatusBar />
            </Border>
        </Grid>
    </Grid>
</UserControl>
