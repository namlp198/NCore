    <Style x:Key="TeachingTiltlebarStyle"
           TargetType="{x:Type ContentControl}">
        <Setter Property="Height"
                Value="45" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ContentControl}">
                    <Grid x:Name="PART_TitlePanel"
                          Background="{TemplateBinding Background}">
                        <Grid Margin="20,0,0,0">
                            <TextBlock Text="{Binding Title, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Foreground="{TemplateBinding Foreground}"
                                       FontSize="{TemplateBinding FontSize}" />
                            <Button x:Name="PART_CloseButton"
                                    HorizontalAlignment="Right"
                                    Style="{DynamicResource PopupWindowCloseButtonTeachingStyle}" />
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PopupCreateArrayTitlebarStyle"
           TargetType="{x:Type ContentControl}">
        <Setter Property="Height"
                Value="30" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ContentControl}">
                    <Grid x:Name="PART_TitlePanel"
                          Background="{TemplateBinding Background}">
                        <Grid Margin="5,0,0,0">
                            <TextBlock Text="{Binding Title, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center" />
                            <Button x:Name="PART_CloseButton"
                                    HorizontalAlignment="Right"
                                    Style="{DynamicResource PopupWindowCloseButtonStyle}" />
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="PopupLightTeachingTitlebarStyle"
           TargetType="{x:Type ContentControl}">
        <Setter Property="Height"
                Value="45" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ContentControl}">
                    <Grid x:Name="PART_TitlePanel"
                          Background="#1a1f2b">
                        <Grid Margin="5,0,0,0">
                            <TextBlock Text="{Binding Title, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Height="27"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       FontFamily="SegoeUI"
                                       Foreground="#ffffff"
                                       Margin="20,9,0,9" />
                            <Button x:Name="PART_CloseButton"
                                    HorizontalAlignment="Right"
                                    Height="30"
                                    Width="30"
                                    Margin="0,8,9,7"
                                    Style="{DynamicResource PopupWindowCloseButtonTeachingStyle}" />
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>