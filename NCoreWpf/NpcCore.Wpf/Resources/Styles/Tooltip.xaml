    <!-- KJH : Message + Image 출력하는 Tooltip-->
    <Style x:Key="MessagenImageTooltip" TargetType="ToolTip">
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="HasDropShadow" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToolTip">
                    <Grid Height="{TemplateBinding Height}" Width="{TemplateBinding Width}" VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid x:Name="PathBottom" Grid.Row="0" Panel.ZIndex="2">
                            <!-- 상단에 노치를 배치함 -->
                            <Path Data="M105.5,292 L227.5,90 349.5,292" Fill="White" 
                                  HorizontalAlignment="Right" Margin="0,0,20,0" Stretch="Fill" 
                                  Stroke="#cccccc" Width="14" Height="12" VerticalAlignment="Top" />
                        </Grid>
                        <Border x:Name="BorderTooltip" Grid.Row="1" CornerRadius="2" HorizontalAlignment="Left" Margin="0,-2,0,0" Panel.ZIndex="1"
                                BorderThickness="1" BorderBrush="#cccccc" Background="White" VerticalAlignment="Stretch">
                            <Grid Width="{TemplateBinding Width}" VerticalAlignment="Stretch" HorizontalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <!-- Outline Tolerance-->
                                <TextBlock Name="tbxOutlineTolerance" Grid.Row="0" Visibility="Collapsed" FontFamily="SegoeUI" FontSize="14" 
                                           Foreground="#222222" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="12">
                                    Set the tolerance for the outline of the area to be coated.
                                </TextBlock>
                                <Image Name="imgOutlineTolerance" Grid.Row="1" Visibility="Collapsed"
                                       HorizontalAlignment="Center" VerticalAlignment="Top"
                                       Source="{DynamicResource IMG_Tooltip_OutlineTolerance}" Margin="6,3,6,6"/>

                                <!-- Cluster-->
                                <StackPanel x:Name="tbxCluster" Grid.Row="0" Orientation="Vertical" Visibility="Collapsed">
                                    <TextBlock FontFamily="SegoeUI" FontSize="14" 
                                               Foreground="#222222" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="12,12,12,0"
                                               />
                                    <TextBlock FontFamily="SegoeUI" FontSize="12" 
                                               Foreground="#666666" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="12,10,12,12"
                                               />
                                </StackPanel>
                                
                                <Image Name="imgCluster" Grid.Row="1" Visibility="Collapsed"
                                       HorizontalAlignment="Center" VerticalAlignment="Top"
                                       Source="{DynamicResource IMG_Tooltip_Cluster}" Margin="6,3,6,6"/>
                            </Grid>
                        </Border>
                        <Grid x:Name="PathTop" Grid.Row="2" Panel.ZIndex="2" Visibility="Collapsed">
                            <Path Data="M105.5,292 L227.5,90 349.5,292" Fill="White" 
                                  HorizontalAlignment="Right" Margin="0,0,20,0" Stretch="Fill" 
                                  Stroke="#cccccc" Width="14" Height="12" VerticalAlignment="Bottom">
                                <Path.RenderTransform>
                                    <TransformGroup>
                                        <RotateTransform Angle="180"/>
                                        <TranslateTransform X="14" Y="10"/>
                                    </TransformGroup>
                                </Path.RenderTransform>
                            </Path>
                        </Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Tag" Value="OutlineTolerance">
                            <Setter TargetName="tbxOutlineTolerance" Property="Visibility" Value="Visible" />
                            <!--<Setter TargetName="imgOutlineTolerance" Property="Visibility" Value="Visible" />-->
                        </Trigger>
                        <Trigger Property="Tag" Value="Cluster">
                            <Setter TargetName="tbxCluster" Property="Visibility" Value="Visible" />
                            <Setter TargetName="imgCluster" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="Tag" Value="Cluster"/>
                                <Condition Property="Placement" Value="Top"/>
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter TargetName="PathTop" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="PathBottom" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="BorderTooltip" Property="Margin" Value="0"/>
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="Tag" Value="Cluster"/>
                                <Condition Property="Placement" Value="Bottom"/>
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter TargetName="PathTop" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="PathBottom" Property="Visibility" Value="Visible"/>
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
               
            </Setter.Value>
        </Setter>
    </Style>


