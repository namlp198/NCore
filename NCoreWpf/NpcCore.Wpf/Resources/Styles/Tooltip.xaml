                                    <TextBlock TextWrapping="Wrap" FontSize="14" FontFamily="SegoeUI" Foreground="#222222"
                                               Margin="0,12,20,15"/>
                                </Grid>
                                <Image Name="imgBubbleLength" Grid.Row="2" Visibility="Collapsed"
                                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,0,20,20"
                                       Source="{DynamicResource IMG_Tooltip_BubbleLength}" />
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Tag" Value="BubbleLength">
                            <Setter TargetName="imgBubbleLength" Property="Visibility" Value="Visible" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>

            </Setter.Value>
        </Setter>
    </Style>
    
