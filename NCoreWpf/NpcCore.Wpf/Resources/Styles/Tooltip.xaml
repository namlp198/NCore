    <Style x:Key="BubbleLengthImageTooltip" TargetType="ToolTip">
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="HasDropShadow" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToolTip">
                    <Grid Height="{TemplateBinding Height}" Width="{TemplateBinding Width}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Panel.ZIndex="2">
                            <!-- 상단에 노치를 배치함 -->
                            <Path Data="M105.5,292 L227.5,90 349.5,292" Fill="#dee2ea" 
                                  HorizontalAlignment="Right" Margin="0,0,20,0" Stretch="Fill" 
                                  Stroke="#cccccc" Width="14" Height="12" VerticalAlignment="Top" />
                        </Grid>
                        <Border Grid.Row="1" CornerRadius="2" HorizontalAlignment="Left" Margin="0,-2,0,0" Panel.ZIndex="1"
                                BorderThickness="1" BorderBrush="#cccccc" Background="White" VerticalAlignment="Top">
                            <Grid Width="{TemplateBinding Width}" VerticalAlignment="Top" HorizontalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="41"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <!-- Outline Tolerance-->
                                <Grid Grid.Row="0" Background="#dee2ea">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" FontSize="16" FontFamily="SegoeUI" Foreground="#222222" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"/>
                                    <Grid Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="4"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                                            <TextBlock Text="50" FontSize="8" FontFamily="NotoSansCJKkr" Foreground="#293247" TextAlignment="Center" Margin="0,0,20,0"/>
                                            <TextBlock Text="100(um)" FontSize="8" FontFamily="NotoSansCJKkr" Foreground="#293247"/>
                                        </StackPanel>
