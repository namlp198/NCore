    <!-- KJH : Message만 출력하는 Tooltip -->
    <!-- TODO : Tooltip 이 하단에 뜰경우는 노치의 위치를 변경해줘야 할듯
    <Setter Property="ToolTipService.PlacementTarget" Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
    -->
    <Style x:Key="MessageTooltip" TargetType="ToolTip">
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="HasDropShadow" Value="True"/>
        <Setter Property="Width" Value="200" />
        <Setter Property="Height" Value="130"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToolTip">
                    <Grid Height="{TemplateBinding Height}" Width="{TemplateBinding Width}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid x:Name="PathBottom" Grid.Row="0" Panel.ZIndex="2">
                            <Path Data="M105.5,292 L227.5,90 349.5,292" Fill="White" 
                                  HorizontalAlignment="Right" Margin="0,0,20,0" Stretch="Fill" 
                                  Stroke="#cccccc" Width="14" Height="12" VerticalAlignment="Top" />
                        </Grid>
                        <Border x:Name="BorderTooltip" Grid.Row="1" CornerRadius="2" HorizontalAlignment="Left" Margin="0,-2,0,0" Panel.ZIndex="1"
                                BorderThickness="1" BorderBrush="#cccccc" Background="White" VerticalAlignment="Top">
                            <Grid Height="{TemplateBinding Width}" VerticalAlignment="Top" HorizontalAlignment="Center">
                                <TextBlock Name="tbxBaseTypeMessage" Visibility="Collapsed" FontFamily="SegoeUI" FontSize="14" 
                                           Foreground="#222222" TextWrapping="NoWrap" VerticalAlignment="Top" Margin="12,12,12,10">
                                    The height information of uncoated<LineBreak/> PCB is required.
                                </TextBlock>
                                <TextBlock Name="tbxDensityMessage" Visibility="Collapsed" FontFamily="SegoeUI" FontSize="14" 
                                           Foreground="#222222" TextWrapping="NoWrap" VerticalAlignment="Top" Margin="12,12,12,10">
                                    The higher the measurement<LineBreak/>density of the inspection region, the<LineBreak/> longer the inspection time.
                                </TextBlock>
                                <TextBlock Name="tbxDefectCount" Visibility="Collapsed" FontFamily="SegoeUI" FontSize="14" LineHeight="1.5" TextAlignment="Left" 
                                           Foreground="#222222" TextWrapping="Wrap" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="12,12,12,10">
                                    If the number of defects is greater than the specified number, it is judges as NG.
                                </TextBlock>
                                <TextBlock Name="tbxOutlineTolerance" Visibility="Collapsed" FontFamily="SegoeUI" FontSize="14" LineHeight="1.5" TextAlignment="Left" 
                                           Foreground="#222222" TextWrapping="Wrap" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="12,12,12,10">
                                    If the number of defects is greater than the specified number, it is judges as NG.
                                </TextBlock>
                                <TextBlock Name="tbxComponentOutlineTolerance" Visibility="Collapsed" FontFamily="SegoeUI" FontSize="14" 
                                           Foreground="#222222" TextWrapping="NoWrap" VerticalAlignment="Top" Margin="12,12,12,10">
                                    The height information of coated <LineBreak/>PCB and uncoated PCB is required.
                                </TextBlock>
                            </Grid>
                        </Border>
                        <Grid x:Name="PathTop" Grid.Row="2" Panel.ZIndex="2" Visibility="Collapsed">
                            <Path Data="M105.5,292 L227.5,90 349.5,292" Fill="White" 
                                  HorizontalAlignment="Right" Margin="0,0,20,0" Stretch="Fill" 
                                  Stroke="#cccccc" Width="14" Height="12" VerticalAlignment="Bottom">
                                <Path.RenderTransform>
                                    <TransformGroup>
                                        <RotateTransform Angle="180"/>
                                        <TranslateTransform X="14" Y="10"/>
                                    </TransformGroup>
                                </Path.RenderTransform>
                            </Path>
                        </Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Tag" Value="BaseType">
                            <Setter TargetName="tbxBaseTypeMessage" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="Tag" Value="Density">
                            <Setter TargetName="tbxDensityMessage" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="Tag" Value="DefectCount">
                            <Setter TargetName="tbxDefectCount" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="Tag" Value="ComponentOutlineTolerance">
                            <Setter TargetName="tbxComponentOutlineTolerance" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="Tag" Value="DefectCount"/>
                                <Condition Property="Placement" Value="Top"/>
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter TargetName="PathTop" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="PathBottom" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="BorderTooltip" Property="Margin" Value="0"/>
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="Tag" Value="DefectCount"/>
                                <Condition Property="Placement" Value="Bottom"/>
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter TargetName="PathTop" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="PathBottom" Property="Visibility" Value="Visible"/>
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

