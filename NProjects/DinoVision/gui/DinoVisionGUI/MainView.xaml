<Window x:Class="DinoVisionGUI.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DinoVisionGUI"
        xmlns:Uc="clr-namespace:NCore.Wpf.UcZoomBoxViewer;assembly=NCore.Wpf.UcZoomBoxViewer"
        mc:Ignorable="d"
        Title="MainView"
        Height="800"
        Width="1280"
        Background="{DynamicResource RGB_Night_33_41_57}"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Closed="Window_Closed">
    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundBrush"
                         Color="#2e3d5a" />
        <!-- TabItem Style-->
        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Border x:Name="Border1"
                                    BorderBrush="LightGray"
                                    CornerRadius="2 2 0 0"
                                    BorderThickness="0.6">
                                <ContentPresenter ContentSource="Header"
                                                  Margin="10 2 10 2"
                                                  TextBlock.Foreground="White" />
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected"
                                     Value="False">
                                <Setter TargetName="Border1"
                                        Property="Margin"
                                        Value="0 2 0 0" />
                                <Setter TargetName="Border1"
                                        Property="BorderThickness"
                                        Value="1" />
                                <Setter TargetName="Border1"
                                        Property="Background"
                                        Value="LightGray" />
                                <Setter Property="Panel.ZIndex"
                                        Value="1" />
                            </Trigger>
                            <Trigger Property="IsSelected"
                                     Value="True">
                                <Setter TargetName="Border1"
                                        Property="Margin"
                                        Value="-5,0,-5,0" />
                                <Setter TargetName="Border1"
                                        Property="BorderThickness"
                                        Value="1,1,1,0" />
                                <Setter TargetName="Border1"
                                        Property="Background"
                                        Value="{StaticResource BackgroundBrush}" />
                                <Setter Property="Panel.ZIndex"
                                        Value="2" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <ControlTemplate x:Key="lblMainTemp"
                         TargetType="Label">
            <Grid>
                <Border BorderBrush="{DynamicResource RGB_Night_56_59_65}"
                        BorderThickness="0.6"
                        CornerRadius="2"
                        Margin="0.6">
                    <Rectangle Fill="{DynamicResource RGB_Night_39_42_49}"
                               Height="auto" />
                </Border>
                <ContentPresenter Content="{TemplateBinding Content}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Bottom"
                                  TextBlock.Foreground="White"
                                  TextBlock.FontFamily="Open Sans"
                                  TextBlock.FontWeight="SemiBold"
                                  TextBlock.FontSize="16"
                                  Margin="6 6 6 6"
                                  ContentStringFormat="{}{0:0.##}" />
            </Grid>
        </ControlTemplate>
        <ControlTemplate x:Key="lbShowResult"
                         TargetType="Label">
            <Grid>
                <Border BorderBrush="{DynamicResource RGB_Night_56_59_65}"
                        BorderThickness="0.6"
                        CornerRadius="2"
                        Margin="0.6">
                    <Rectangle Fill="{TemplateBinding Background}"
                               Height="auto" />
                </Border>
                <ContentPresenter Content="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Bottom"
                                  TextBlock.Foreground="{TemplateBinding Foreground}"
                                  TextBlock.FontFamily="Open Sans"
                                  TextBlock.FontWeight="SemiBold"
                                  TextBlock.FontSize="16"
                                  Margin="6 6 6 6"
                                  ContentStringFormat="{}{0:0.##}" />
            </Grid>
        </ControlTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.1*" />
            <RowDefinition Height="14*" />
            <RowDefinition Height="0.8*" />
        </Grid.RowDefinitions>
        <ToolBar Margin="2"
                 Background="{DynamicResource RGB_Night_46_61_90}">
            <Button Margin="5"
                    Name="btnSettings"
                    Click="btnSettings_Click">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource IMG_Setting_3}"
                               Margin="8" />
                        <TextBlock Text="Settings"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   FontSize="14"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   Margin="0 0 5 0" />
                    </StackPanel>
                </Button.Content>
            </Button>
            <Separator Margin="5" />
            <Button Margin="5"
                    Name="btnInit"
                    Click="btnInit_Click">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource IMG_Refresh}"
                               Margin="8" />
                        <TextBlock Text="Initialize"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   FontSize="14"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   Margin="0 0 5 0" />
                    </StackPanel>
                </Button.Content>
            </Button>
            <Separator Margin="5" />
            <Button Margin="5"
                    Name="btnLogin"
                    Click="btnLogin_Click">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource IMG_Account_2}"
                               Margin="9" />
                        <TextBlock Text="Login"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   FontSize="14"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   Margin="0 0 5 0" />
                    </StackPanel>
                </Button.Content>
            </Button>
        </ToolBar>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3.8*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border BorderBrush="LightGray"
                    BorderThickness="1">
                <Uc:UcZoomBoxViewer Margin="3"
                                    x:Name="ucZoomBoxViewer" />
            </Border>
            <Border Margin="3"
                    Grid.Column="1">
                <TabControl Background="{DynamicResource RGB_Night_61_66_77}">
                    <TabItem Header="Results"
                             FontSize="16"
                             FontFamily="Segoe UI"
                             FontWeight="Bold"
                             Foreground="Black">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Border Margin="3"
                                    BorderBrush="LightGray"
                                    BorderThickness="0.6"
                                    CornerRadius="2">
                                <Label Name="lbResult"
                                       FontWeight="SemiBold"
                                       FontSize="100"
                                       Content="NONE"
                                       VerticalContentAlignment="Center"
                                       HorizontalContentAlignment="Center"
                                       Foreground="White" />
                            </Border>
                            <Border Grid.Row="1"
                                    Margin="3"
                                    BorderBrush="LightGray"
                                    BorderThickness="0.6"
                                    CornerRadius="2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Row="0"
                                           Grid.Column="0"
                                           Template="{StaticResource lblMainTemp}"
                                           Content="OK"/>
                                    <Label Grid.Row="1"
                                           Grid.Column="0"
                                           Template="{StaticResource lblMainTemp}"
                                           Content="NG" />
                                    <Label Grid.Row="2"
                                           Grid.Column="0"
                                           Template="{StaticResource lblMainTemp}"
                                           Content="Total" />
                                    <Label Grid.Row="3"
                                           Grid.Column="0"
                                           Template="{StaticResource lblMainTemp}"
                                           Content="Process" />
                                    
                                    <!--Show statistics-->
                                    <Label Grid.Row="0"
                                           Grid.Column="1"
                                           Template="{StaticResource lbShowResult}"
                                           Background="{DynamicResource RGB_Cold_71_127_75}"
                                           Foreground="White"
                                           Content="{Binding CountOK}"/>
                                    <Label Grid.Row="1"
                                           Grid.Column="1"
                                           Template="{StaticResource lbShowResult}"
                                           Background="{DynamicResource RGB_Hot_206_59_63}"
                                           Foreground="White"
                                           Content="{Binding CountNG}"/>
                                    <Label Grid.Row="2"
                                           Grid.Column="1"
                                           Template="{StaticResource lbShowResult}"
                                           Background="White"
                                           Foreground="Black"
                                           Content="{Binding CountTotal}"/>
                                    <Label Grid.Row="3"
                                           Grid.Column="1"
                                           Template="{StaticResource lbShowResult}"
                                           Background="{DynamicResource RGB_Night_61_66_77}"
                                           Foreground="White"
                                           Content="{Binding ProcessTime}"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>
                    <TabItem Header="System Log"
                             FontSize="16"
                             FontFamily="Segoe UI"
                             FontWeight="Bold"
                             Foreground="Black">

                    </TabItem>
                </TabControl>
            </Border>
        </Grid>
        <StatusBar Grid.Row="2"
                   Background="{DynamicResource RGB_Night_42_45_52}">

        </StatusBar>
    </Grid>
</Window>
